    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Django Runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env" // Ensure .env variables are loaded
        },
        {
            "name": "Django process_tasks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "process_tasks"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}